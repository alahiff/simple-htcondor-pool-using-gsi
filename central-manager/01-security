use SECURITY: Strong

SEC_CLIENT_AUTHENTICATION = REQUIRED
SEC_CLIENT_AUTHENTICATION_METHODS = GSI,FS
SEC_CLIENT_INTEGRITY = REQUIRED

SEC_DAEMON_AUTHENTICATION = REQUIRED
SEC_DAEMON_AUTHENTICATION_METHODS = GSI,FS
SEC_DAEMON_INTEGRITY = REQUIRED

SEC_DEFAULT_AUTHENTICATION = REQUIRED
SEC_DEFAULT_AUTHENTICATION_METHODS = GSI,FS

SEC_ENABLE_MATCH_PASSWORD_AUTHENTICATION = TRUE

GSI_DAEMON_CERT =  /etc/grid-security/hostcert.pem
GSI_DAEMON_DIRECTORY = /etc/grid-security
GSI_DAEMON_KEY = /etc/grid-security/hostkey.pem
GSI_DAEMON_TRUSTED_CA_DIR = /etc/grid-security/certificates/
GSI_DELEGATION_KEYBITS = 1024
CERTIFICATE_MAPFILE = /etc/condor/condor_mapfile

ALLOW_DAEMON = 127.0.0.1, IPADDRESS, condor@*
HOSTALLOW_WRITE = *
ALLOW_WRITE = *
ALLOW_READ = *
HOSTALLOW_DAEMON = IPADDRESS

SCHEDD.ALLOW_WRITE = user@*
COLLECTOR.ALLOW_ADVERTISE_STARTD = worker@*
COLLECTOR.ALLOW_ADVERTISE_SCHEDD = submitter@*
COLLECTOR.ALLOW_ADVERTISE_MASTER = submitter@*, worker@*, condor@*
SHADOW.ALLOW_WRITE = worker@*, submitter@*
NEGOTIATOR.ALLOW_WRITE = condor@*, submitter@*

DENY_WRITE         = anonymous@*
DENY_ADMINISTRATOR = anonymous@*
DENY_DAEMON        = anonymous@*
DENY_NEGOTIATOR    = anonymous@*
DENY_CLIENT        = anonymous@*
